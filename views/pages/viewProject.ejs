<div class="container">
    <div class="jumbotron" ng-controller="viewProjectCtrl">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend><h2>View Project</h2></legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Project Title</label>
                    <div class="col-md-5">
                        {{project.title}}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Description</label>
                    <div class="col-md-5">
                        {{project.description}}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Category</label>
                    <div class="col-md-2">
                        {{project.category}}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Status</label>
                    <div class="col-md-5">
                        {{project.status}}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Tags</label>
                    <div class="col-md-5">
                        {{project.tags}}
                    </div>
                </div>

                <button class="btn btn-success btn-md" ui-sref="editProject({id: project._id})"><i class="ion-android-create"></i> Edit Project</button>
                <a class="btn btn-primary btn-md" href="#/projects"><i class="ion-ios-home"></i> Return to Projects</a>

            </fieldset>
        </form>

    </div>

</div>