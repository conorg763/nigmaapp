<div class="container">
    <div class="center-form panel">
        <div class="panel-body">
            <h4 class="text-center"><i class="ion-person-add"></i>Register</h4>
            <div ng-show="error" class="alert alert-danger row">
                <span>{{ error.message }}</span>
            </div>

            <form ng-submit="register()">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control input-lg" placeholder="First Name" ng-model="user.firstName" required></input>
                    <span class="ion-person form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control input-lg" placeholder="Surname" ng-model="user.surname" required></input>
                    <span class="ion-person form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control input-lg" placeholder="email" ng-model="user.email" required></input>
                    <span class="ion-person form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control input-lg" placeholder="username" ng-model="user.username" required></input>
                    <span class="ion-person form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control input-lg" placeholder="password" ng-model="user.password" required></input>
                    <span class="ion-lock-combination form-control-feedback"></span>
                </div>
                <p class="text-center text-muted"><small>By clicking on Register, you agree to <a href="#">
                            terms & conditions</a> and <a href="#">privacy policy</a> </small></p>

                <button type="submit" class="btn btn-block btn-primary">Register</button>
                </br>
                <p class="text-center text-muted"><small>Already have an account? <a href="#/login">Log in now</a></small></p>

            </form>
        </div>
    </div>
</div>