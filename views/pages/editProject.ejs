<div class="container">
    <div class="jumbotron" ng-controller="editProjectCtrl">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend><h2>Edit Project</h2></legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Title:</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control input-md" ng-model="project.title">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Description</label>
                    <div class="col-md-5">
                        <textarea rows="8" class="form-control input-md" ng-model="project.description"></textarea>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Category</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control input-md" ng-model="project.category">

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Status</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control input-md" ng-model="project.status">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Tags</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control input-md" ng-model="project.tags">
                    </div>
                </div>

                <button class="btn btn-success btn-md" ng-click="updateProject(project)"><i class="ion-refresh"></i> Update</button>
                <button class="btn btn-danger btn-md" ng-click="removeProject(project)"><i class="ion-close-circled"></i> Remove</button>
            </fieldset>
        </form>
        <a class="btn btn-primary btn-md" href="#/projects"><i class="ion-ios-home"></i> Return to Projects</a>


    </div>

</div>