<div class="container">
    <div class="jumbotron" ng-controller="editProfileCtrl">

        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend><h2>Edit Profile:</h2></legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">First Name:</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control input-md" ng-model="profile.firstName">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Surname:</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control input-md" ng-model="profile.surname">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Email:</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control input-md" ng-model="profile.email">

                    </div>
                </div>


                <button class="btn btn-primary btn-lg" ng-click="updateProfile(profile)">Update</button>

            </fieldset>
        </form>

    </div>

</div>