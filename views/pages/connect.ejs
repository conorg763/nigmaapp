
<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-xs-8 chat-window">
                <ul>
                <li ng-repeat="message in messages">
                   <p> <span class="username"><strong>{{message.username}}</strong></span>
                    <span class="message">{{message.message}}</span></p>
                </li>
                </ul>
            </div>
            <div class="col-xs-4 user-window">
                <h3>Users in this Chat Room:</h3>

                <ul>
                    <li ng-repeat="user in users"><p>{{user}}</p></li>
                </ul>

            </div>
        </div>
        <div class="row">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="chatInput" class="col-sm-1"> Chat</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="chatInput" placeholder="Enter text here.." ng-model="msg">
                    </div>
                    <div class="col-sm-3">
                        <button type="submit" class="btn btn-primary" ng-click="sendMessage(msg)">Send Message</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

</div>