<div class="container">
    <div class="center-form panel">
        <div class="panel-body">

            <h4 class="text-center"><i class="ion-log-in"></i> Log in</h4>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="logIn()">

            <div class="form-group has-feedback">
                <input type="text" class="form-control input-lg" placeholder="username"
                       ng-model="user.username" required></input>
                <span class="ion-person form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" class="form-control input-lg" placeholder="password"
                       ng-model="user.password"></input>
                <span class="ion-lock-combination form-control-feedback"></span>

            </div>
            <button type="submit" class="btn btn-block btn-success">Log In</button>
            <br/>

            <p class="text-center text-muted">
                <small>Don't have an account yet? <a href="#/register">Register</a></small>
            </p>
            <div class="signup-or-separator">
                <h6 class="text">or</h6>
                <hr>
            </div>
        </form>
            </br>
            <h2>Coming in PHASE 2</h2>
            <button class="btn btn-block btn-google"><i class="ion-social-google"></i> Sign in with Google</button>
        </div>
    </div>
</div>